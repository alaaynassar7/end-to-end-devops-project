# Use professional lightweight image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install dependencies directly to keep it simple for now
RUN pip install --no-cache-dir flask gunicorn

# Copy application code
COPY app.py .

# Expose port
EXPOSE 5000

# Run with Gunicorn for production standard
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]